{
 

  "PlannerDbContext": "Host=localhost;Port=5432;Database=Planner;Username=postgres;Password=admin;SslMode=Prefer;Trust Server Certificate=true;",


  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },

    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {level:u3} ({CorrelationID})] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {level:u3} ({CorrelationID})] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  
  "AllowedHosts": "*"

}
